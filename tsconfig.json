{
    "ts-node": {
        // these options are overrides used only by ts-node
        // same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "pretty": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitHelpers": false,
        "noUnusedLocals": false,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "traceResolution": false,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["./themes/anzhiyu/source/js/editor/src","./themes/anzhiyu/source/js/editor"],
    "exclude": ["./node_modules","./themes/anzhiyu/source/js/editor/dist"],
    "baseUrl": "./themes/anzhiyu/source/js/editor/",
    "outDir": "./dist",

}