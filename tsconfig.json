{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "esnext",
        "jsx": "preserve",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        // "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "@/*": [
            "./src/*"
        ]
    },
    "include": [
        "src/**/*",
        "types/**/*",
        ".vitepress/**/*",
    ],
    "exclude": [
        "node_modules",
        ".vitepress/dist",
        ".vitepress/.cache",
        "dist"
    ]
}